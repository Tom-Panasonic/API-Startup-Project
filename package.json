{
  "name": "api-startup-project",
  "version": "1.0.0",
  "description": "初心者開発者向けの簡単なAPI開発プロジェクト",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "db:generate": "drizzle-kit generate:mysql",
    "db:migrate": "drizzle-kit up:mysql",
    "db:seed": "tsx scripts/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push:mysql",
    "setup": "bash scripts/setup.sh",
    "quick-start": "bash scripts/start.sh",
    "docs": "echo 'Swagger UI: http://localhost:3000/api-spec/' && echo 'OpenAPI Spec: http://localhost:3000/api-spec/openapi.yaml'"
  },
  "keywords": [
    "api",
    "typescript",
    "express",
    "mysql",
    "drizzle-orm",
    "docker"
  ],
  "author": "API Startup Project",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "drizzle-kit": "^0.20.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
